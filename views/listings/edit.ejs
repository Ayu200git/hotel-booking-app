<% layout("/layouts/boilerplate") %>
<div class="row  mt-3 container">
    <div class="col-8 offset-1 form-container">
        <h2> Update Details</h2>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" nonvalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mt-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
        </div>
        <div>
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        </div>
        <div>
            Original Image</br>
            <img src="<%= orurl %>">
        </div>
        <div>
            <label for="image" class="form-label">New Image</label>
            <input name="listing[image]" type="file" class="form-control">
        </div>
        <div>
            <label for="price" class="form-label">Price:</label>
            <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" class="form-control" />
        </div>
        <div>
            <label for="location" class="form-label">Location:</label>
            <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
        </div>
        <div>
             <label for="country" class="form-label">Country:</label>
            <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" class="form-control" required>

        </div>
        <div>
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" required>
                <option value="">Select Category</option>
                <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <%= listing.category === cat ? 'selected' : '' %>><%= cat %></option>
            <% }) %>
</select>

        </div>
        <div>
            <label for="available" class="form-label">Available:</label>
            <select id="available" name="listing[available]" class="form-control">
            <option value="true" <%= listing.available ? "selected" : "" %>>Yes</option>
            <option value="false" <%= !listing.available ? "selected" : "" %>>No</option>
        </select>
        </div>
        <button type="submit" class="btn-animated fancy-btn">Submit Updated </button>
        </form>
    </div>
</div>
     
 